            </if>
            <if test="query.personalIntroductionFuzzy!= null  and query.personalIntroductionFuzzy!=''">
                and u.personal_introduction like concat('%', #{query.personalIntroductionFuzzy}, '%')
            </if>
            <if test="query.registerTimeStart!= null and query.registerTimeStart!=''">
